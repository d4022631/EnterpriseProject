@using System.Reflection
@{
    Version version = typeof(Startup).Assembly.GetName().Version;
    string versionString = $"v{version}";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Booking Block</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Booking Block", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>


                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Admin<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Business", "Index", "Businesses")</li>
                            <li>@Html.ActionLink("Business Types", "Index", "BusinessTypes")</li>
                            <li>@Html.ActionLink("Business Opening Times", "Index", "BusinessOpeningTimes")</li>
                            <li>@Html.ActionLink("Business Users", "Index", "BusinessUsers")</li>
                            <li>@Html.ActionLink("Services", "Index", "Services")</li>
                            <li>@Html.ActionLink("Bookings", "Index", "Bookings")</li>
                            <li>@Html.ActionLink("Reviews", "Index", "Reviews")</li>
                        </ul>
                    </li>


                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Tools<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="/Swagger">Swagger (Web API Documentation)</a></li>
                            <li>@Html.ActionLink("EDMX (Database Design)", "Edmx", "Database")</li>
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Environment<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("App Settings", "AppSettings", "Environment")</li>
                            <li>@Html.ActionLink("Environment Variables", "EnvironmentVariables", "Environment")</li>
                        </ul>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Booking Block - @versionString</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
